  <style>
     body {
   background-color: rgb(3, 3, 34);
       font-style: oblique;
        color: aliceblue;
    }      

    .addDoctorForm {
    border: solid aliceblue 1px;
    color: aliceblue;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 100px auto;
    width: 50%;
    padding: 15px;
}

.addDoctorbtn,
.addDoctorbtn:hover {
   color: aliceblue;
}

.inputDoctorData {
    width: 50%;
}
</style>
</head>
<form action="/doctor/{{editDoc._id}}?_method=PUT" method="post" class="addDoctorForm">

    <!-- #region form title-->
    <h2 class="text-center">Edit Doctor {{editDoc.Doc_name}}</h2>
    <!-- #endregion -->

    {{!-- Doc_code --}}
    <div class="my-3 inputDoctorData">
        <label for="">Code</label>
        <input type="number" class="form-control" name="Doc_code" value="{{editDoc.Doc_code}}" id="number">
    </div>

    {{!-- Doc_name --}}
    <div class="my-3 inputDoctorData">
        <label for="">Name</label>
        <input type="text" class="form-control" name="Doc_name" value="{{editDoc.Doc_name}}" id="text">
    </div>

    {{!-- Doc_email --}}
    <div class="my-3 inputDoctorData">
        <label for="">Email</label>
        <input type="email" class="form-control" name="Doc_email" value="{{editDoc.Doc_email}}" id="email">
    </div>

    {{!-- Doc_password --}}
    <div class="my-3 inputDoctorData">
        <label for="">Password</label>
        <input type="password" class="form-control" name="Doc_password" value="{{editDoc.Doc_password}}" id="passwrd">
    </div>

    {{!-- add button --}}
    <div class="my-3">
        <button type="submit" class="btn btn-info addDoctorbtn" style="color: rgb(20, 8, 53);">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                <path d="M11 11V5H13V11H19V13H13V19H11V13H5V11H11Z" fill="rgba(255,255,255,1)"></path>
            </svg>
           Update
        </button>
    </div>

</form>
